{
  "name": "@sourceregistry/node-opa",
  "version": "1.0.0",
  "description": "A minimal, dependency-free TypeScript client for interacting with the Open Policy Agent (OPA) REST API",
  "main": "./dist/index.es.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "example::create-policy": "tsx examples/create-policy.ts",
    "example::list-policies": "tsx examples/list-policies.ts",
    "example::evaluate-policy": "tsx examples/evaluate-policy.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SourceRegistry/node-opa.git"
  },
  "keywords": [
    "OPA",
    "Open Policy Agent",
    "Rego",
    "REST",
    "query"
  ],
  "author": "A.P.A. Slaa (a.p.a.slaa@projectsource.nl)",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/SourceRegistry/node-opa/issues"
  },
  "homepage": "https://github.com/SourceRegistry/node-opa#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/git": "^10.0.1"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer"
      ],
      [
        "@semantic-release/release-notes-generator"
      ],
      [
        "@semantic-release/changelog"
      ],
      [
        "@semantic-release/npm"
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "node-opa(release): ðŸš€ ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
